<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Introduce≈£i datele</h3>
        </div>
        <div class="panel-body">
          <% if flash[:alert] %>
            <p id="notice"> <%= flash[:alert] %></p>
          <% end %>

          <%= form_with(model: @user, url:'/login') do |form| %>
            <fieldset>

              <div class="form_group">
                <%= form.text_field :phone, id: :user_phone, class: 'form-control', autofocus: true, placeholder: 'Numar de telefon' %>
              </div>
              <br>

              <div class="form_group">
                <%= form.password_field :password, id: :user_password, class: 'form-control', autofocus: true, placeholder: 'Parola' %>
              </div>
              <br>

              <div class="actions">
                <%= form.submit :'Logare', :class => 'btn btn-lg btn-success btn-block'%>
              </div>
              <br>
              <p>
                Nu ai cont? <%= link_to 'Cere unul aici!', '/signup' %>
              </p>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>