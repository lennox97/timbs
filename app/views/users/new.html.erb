<br><br><br><br><br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Completați formularul</h3>
        </div>
        <div class="panel-body">
          <% if flash[:alert] %>
            <p id="notice"> <%= flash[:alert] %></p>
          <% end %>

          <%= form_with(model: @user, url:'/signup') do |form| %>
            <fieldset>
            <div class="form_group">
              <%= form.text_field :firstName, id: :user_firstName, class: 'form-control', autofocus: true, placeholder:'Prenume' %>
            </div>
            <br>
            <div class="form_group">
              <%= form.text_field :lastName, id: :user_lastName, class: 'form-control', autofocus: true, placeholder:'Nume' %>
            </div>
            <br>
            <div class="form_group">
              <%= form.password_field :password, id: :user_password, class: 'form-control', autofocus: true, placeholder: 'Parola' %>
            </div>
            <br>
            <div class="form_group">
              <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: 'form-control', autofocus: true, placeholder:'Confirmă parola'%>
            </div>
            <br>
            <div class="form_group">
              <%= form.text_field :phone, id: :user_phone, class: 'form-control', autofocus: true, placeholder: 'Numar de telefon' %>
            </div>
            <br>
            <div class="actions">
              <%= form.submit :'Înregistrare', :class => 'btn btn-lg btn-success btn-block'%>
            </div>
              <br>
              <p>
                Ai deja un cont? <%= link_to 'Logare!', '/login' %>
              </p>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
